<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Unit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/addUnit.css">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Montserrat:400,800');

        body {
            background-color:#e3f2fd;
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body>
<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg">
        <!-- Card Header -->
        <div class="card-header text-center bg-primary text-white">
            <h2 class="h4 mb-0">
                <i class="bi bi-journal-text"></i> Add New Unit
            </h2>
        </div>

        <div class="card-body">
            <form id="add-unit-form" method="POST" action="/admin-dashboard/add-unit">
                <!-- Unit Name -->
                <div class="mb-4">
                    <label for="unit-name" class="form-label">Unit Name</label>
                    <input type="text" class="form-control" id="unit-name" name="unit_name" placeholder="Enter unit name" required>
                </div>
                <!-- Number of Students -->
                <div class="mb-4">
                    <label for="number-of-students" class="form-label">Number of Students</label>
                    <input type="number" class="form-control" id="number-of-students" name="number_of_students" placeholder="Enter number of students" required>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-plus-circle"></i> Add Unit
                </button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</body>
</html>