<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teachers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/teachers.css">
</head>
<body>
<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4 p-1">
        <h1 class="text-primary fw-bold mb-0">Teachers for <%= subjectName %></h1>
        <a href="/admin-dashboard/subjects" class="btn btn-danger">
            <i class="bi bi-arrow-left me-2"></i> Back
        </a>
    </div>

    <div class="row">
        <% if (teachers.length > 0) { %>
            <% teachers.forEach(teacher => { %>
                <div class="col-md-3">
                    <div class="card shadow-sm text-center">
                        <!-- Initials Badge -->
                        <div class="profile mx-auto mt-4">
                            <div class="initials-circle">
                                <span>
                                    <%= teacher.name.charAt(0).toUpperCase() %><%= teacher.surname.charAt(0).toUpperCase() %>
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Teacher Details -->
                            <h5 class="card-title"><%= teacher.name %> <%= teacher.surname %></h5>
                            <p class="card-text">Contact: <%= teacher.number %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center text-muted">No teachers found for this subject.</p>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>